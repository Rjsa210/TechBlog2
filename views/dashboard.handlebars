<div class="columns is-multiline" id="card-container">
  <div class="column is-full spacer">
    <a href="/newpost">
      <button class="button is-info" id="new-post-button">Create new post</button>
    </a>
  </div>
  {{!-- posts append here --}}
  <div class="columns is-multiline" id="card-container">
  <div class="column is-full spacer">
  </div>
  {{#each posts as |post|}}
  <div class="column is-full">
    <div class="card">
      <a href="/posts/{{post.id}}">
        <header class="card-header has-background-success">
          <p class="card-header-title">
            {{post.title}}
          </p>
        </header>
        </a>
        <div class="card-content">
          <div class="content">
            <p>{{post.content}}</p>
            <p>Created by: {{user.username}} on {{format_date post.date_created}}</p>
            <button class="button is-danger" id="delete-button" data-id="{{post.id}}">delete post</button>
            <button class="button is-warning" id="update-button">update post</button>
          </div>
        </div>
    </div>
    
  </div>
  {{/each}}
  {{!-- posts append here --}}
</div>
<script src="./js/dashboard.js"></script>